<style>

.header {
    width: 80%;
    margin: 0 auto;
}

h1{
    color: #fff;
    font-size: 2em;
}


.input-group {
    margin-bottom: 0.5em;
}

.holder {
    width: 70%;
    margin: 0.3em auto;  
    background-color: rgba(62, 69, 81, 0.3);
    padding: 2em 2em;
    border-radius: 3em;
}


.contact-form-outer-box {
  position: relative;
}

</style>


<div class="container-fluid">
  <%= image_tag "teasunset.jpeg", class: "bg" %>



  <h1 class="page_title">Contact Us</h1>


  <div class="contact-form-outer-box">
    <div class="holder">
      <div class="header">
        <h1> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> Get in touch! </h1>

             <%= form_for @contact, url: contacts_path, method: :post do |f| %>
             
                  
                    <div class="input-group">
                      <div class="input-group-addon">               
                       <span class="glyphicon glyphicon-user" aria-hidden="true"></span> </div>
                      <%= f.text_field :name, reqired: true, autofocus: true, placeholder: "Name", class: "form-control input-lg" %><br>
                    </div>
                
                  </br>

                   <div class="input-group" >
                      <div class="input-group-addon">               
                       <span class="glyphicon glyphicon-user" aria-hidden="true"></span> </div>
                      <%= f.email_field :email, reqired: true, autofocus: true, placeholder: "E-mail", class: "form-control input-lg" %><br>
                    </div>

                   </br>

                   <div class="input-group">
                      <div class="input-group-addon">               
                       <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </div>
                      <%= f.text_area :message, as: :text, :rows => 6, reqired: true, autofocus: true, placeholder: "Messages", class: "form-control input-lg" %><br>
                    </div>


                       <center> <%= f.submit "send message", class: "btn btn-primary btn-lg" %> </center>
                    
               <% end %>
      </div>
    </div>  
  </div>
</div>

