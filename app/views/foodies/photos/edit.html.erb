<link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet"> 
<div class="container-fluid">

  <%= image_tag "donuts.jpeg", class: "bg" %>


			<div class="row">

				<div class="col-md-7 col-xs-7 ">
					<p>Foodies::Photos - edit</p>
				  <div id="contact-form">


					<%= form_for @photo, url: foodies_photo_path(id: @photo.id), method: :put do |f| %>


							<div class="">
								<%= f.label  :title, "Food", :class =>"" %>
							    <%= f.text_field :title %>

							</div>

							<div class="">
								<%= f.label  :description, "Review" %>
								<%= f.text_area :description %>
							</div>
							
							<div class="">
								<%= f.label  :price %>
								<%= f.text_field :price %>
							</div>


							<div class="">
								<%= f.label  :restaurant %>
								<%= f.text_field :restaurant %>
							</div>
				                          

							<div class="row">
							<div class="col-md-6 col-xs-6 ">
							 
					  			<%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
					  		</div>	
		  				
					  	 <div class="col-md-6 col-xs-6 ">
							<div class="fileinputs">
					  		    <input id="avatar-upload" class="file" name="photo[avatar]" type="file">
					  		    <div class="fakefile">
					  		    	<%= f.hidden_field :avatar_cache %>
					  		   	<button type="button" class="btn btn-primary btn-lg">Add you image </button>
					  				
					  			</div>
					  		</div>
					  	</div>
					  	</div>
				  </div>
				</div>
			

					  	<div class="col-md-5 col-xs-5">	
					  	   
							<div class="preview-photo">
					  			<img id="img-prev" class="img-new" src="#" alt="	Your diet is a bank account. Good food choices are good investments. Bethenny Frankel"  class="img-thumbnail hidden"/>
							</div>
							
						</div>
				    <% end %>
		    </div>
</div>






<script type="text/javascript">

$(function() {
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#img-prev').attr('src', e.target.result);
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#avatar-upload").change(function(){
    $('#img-prev').removeClass('hidden');
    readURL(this);
  });
});


</script>