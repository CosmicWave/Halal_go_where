  <p>Foodies::Photos - Show</p>




  <div class="container-fluid">
  	<% unless current_foody %>
  	  <%= link_to "Sign in with Facebook", foody_facebook_omniauth_authorize_path %>
  	   <li><%= link_to "Login", new_foody_session_path %></li>
  	  <% else %>
  	   <%= link_to "Logout", destroy_foody_session_path, method: :delete %>
  	<% end %>

  	  <%= link_to "Upload New Photo", new_foodies_photo_path %>
  </div>



<div class="container-fluid cardcont">
  <div class="row cardrow">

 <% if foody_signed_in? %>


     
       <div class="card">                            
           <div class="header">
             <div class="filter"></div>
             <div class="actions">
               <button class="btn btn-round btn-fill btn-neutral btn-modern">


                    <% if @photo.avatar.present? %> 
                      <%= link_to foodies_photo_path(id: @photo.id) do %>
                        <%= image_tag @photo.avatar_url.to_s, :size => "250x180" %>
                        <% end %>
                    <% else %>
                      <%= link_to foodies_photo_path(id: @photo.id) do %>
                        <%= image_tag ('/assets/mee.jpg'), :size => "250x180" %>
                      <% end %>
                    <% end %>
               </button>
             </div>
           </div>
           
        <div class="content">
         <h4>Place: <%= @photo.restaurant %></h4>
         <p>Food: <%= @photo.title %></p>
         <p>Review: <%= @photo.description %></p>
         <p>Price:<b> $<%= @photo.price %></b></p>
             
            <div class="bywho"><small><%= link_to @photo.foody.name, foody_path(@photo.foody) %></br> Created: <%= time_ago_in_words(@photo.created_at) %> ago</small></div>
            
            <% if @photo.foody == current_foody %>  
              <%= link_to "Edit", edit_foodies_photo_path(id: @photo.id) %>
              <%= link_to "Delete", foodies_photo_path(id: @photo.id), method: :delete %>
            <% end %>

       </div>                                          
      </div> <!-- end card -->
     </div>
    <% end %>
                                   
</div>