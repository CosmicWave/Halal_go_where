<div class="card-box col-md-4 col-sm-6">
   <div class="card">                            
       <div class="header">
         <img src="assets/img/lifestyle-8.jpg"/>
         <div class="filter"></div>
         
         <div class="actions">
           <button class="btn btn-round btn-fill btn-neutral btn-modern">
                <% if @photo.avatar.present? %> 
                  <%= link_to foodies_photo_path(id: @photo.id) do %>
                    <%= image_tag @photo.avatar_url(:thumb).to_s, :size => '260x180' %>
                    <% end %>
                <% else %>
                  <%= link_to foodies_photo_path(id: @photo.id) do %>
                    <%= image_tag ('/assets/mee.jpg'), :size => "260x180" %>
                  <% end %>
                <% end %>
           </button>
         </div>
       </div>
       
       <div class="content">
        
         <h5 class="restaurant"><%= @photo.restaurant %></h5>
         <h4 class="title"><%= @photo.title %></h4>
         <p class="description"><%= @photo.description %></p>
         <p class="price"><p>$<%= @photo.price %></p>
         <div class="rating">8.8</div>
         <div class="bywho"><small>By Regent on 20th Oct 2017</small></div>
       </div>                                          
   </div> <!-- end card -->
  </div>





<h1>Foodies::Photos - Show</h1>



<div class="container-fluid">
  <div class="row indexes">


  <% unless current_foody %>
    <%= link_to "Sign in with Facebook", foody_facebook_omniauth_authorize_path %>
    <li><%= link_to "Login", new_foody_session_path %></li>
      <% else %>
    <%= link_to "Logout", destroy_foody_session_path, method: :delete %>
  <% end %>

  <% if foody_signed_in? %>
    <%= link_to current_foody.name, foody_path(current_foody) %>
    <%= @photo.title %>
    <%= @photo.description %>
    <%= @photo.restaurant %>
  
    <p>$<%= @photo.price %></p>
    
     <% if @photo.avatar.present? %>  
      <%= link_to foodies_photo_path(id: @photo.id) do %>
        <%= image_tag @photo.avatar_url(:thumb).to_s, :size => '260x180' %>
      <% end %>
    <% else %>
      <%= link_to foodies_photo_path(id: @photo.id) do %>
        <%= image_tag ('/assets/mee.jpg'), :size => "260x180" %>
       <% end %>
     <% end %>

    <% if @photo.foody == current_foody %>  
       <td><div class=""><%= link_to "Edit", edit_foodies_photo_path(id: @photo.id) %>    </div></td>
       <td><div class=""><%= link_to "Delete", foodies_photo_path(id: @photo.id), method: :delete %></div></td>
  <% end %>
  <% end %>

        
    <%= link_to "Upload New Photo", new_foodies_photo_path %>
  </div>
</div>