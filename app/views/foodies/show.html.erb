<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>

<div class="container-fluid profilebg">
  <div class="row">
    <div class="profile-banner">
      <div class="row profilerow">
        <div class="col-md-1 col-xs-2"></div>
          <div class="col-md-4 col-xs-8 profilebox">
            <div class="row">
              <div class="col-md-3 col-xs-4">
                <%= avatar_for @foody %>
                <% if @foody == current_foody %>
                  <%= link_to 'Settings', edit_foody_path(@foody), class: "settinglink btn btn-primary btn-xs settingsbutton" %>
                <% end %>    
              </div>
              
              <div class="col-md-9 col-xs-8">
                <div class="row namerow">
                  <span class="profilename"><%= @foody.name %></span><br>
                  <span class="profilestatus"><%= @foody.status %></span>
                </div>

                <div class="row foodystatsrow">
                  <ul class="list-inline">
                    <li>
                      <span class="statsnum"><%= @foody.photos.count %></span> Reviews
                    </li>
                    
                    <li>
                      <span class="statsnum"><%= @foody.likeables.count %></span> Likes
                    </li>                 
                  </ul>                
                </div>
                                        
              </div>
           
            </div>
          </div>
        <div class="col-md-7 col-xs-2"></div>
      </div>
    </div>
  </div>
</div>


 <style>
.grid-item { width: 250px; }
.grid-item--width2 { width: 250px; }
</style> 


<div class="container-fluid">
  <div class="row cardrow">
    <div class="posthead">Your Reviews</div>
     <div class="grid">

  <% @foodyphoto.each do |photo| %>
  
  <div class="col-sm-3">
    <div class="card-index">          
        
      <div class="header">
        <%= link_to foodies_photo_path(id: photo.id) do %>
          <!-- <%= image_tag photo.avatar_url.to_s, class: "fixed-ratio-resize-index" %> -->
          <div style="background: url(<%= photo.avatar_url.to_s %>) center center no-repeat; background-size: cover;" class="fixed-ratio-resize-index"></div>
        <% end %>           
      </div>           
          
      <div class="content-index">
        <div class="row">
          <div class="col-md-8 col-xs-8">
            <h4><%= truncate(photo.title.capitalize, :length => 20) %></h4>
          </div>
          
          <div class="col-md-4 col-xs-4">
            <div class="rating-index">
              <div id="rating-<%photo.id%>">
                <%= render 'rating', photo: photo %>
              </div> 
            </div>  
          </div>
        </div>           
          
          
          <div class="row"> 
            <div class="col-md-9 col-xs-9">
              <p class="index-review"><%= truncate(photo.description, :length => 90) %></p>
            </div>
            
            <div class="col-md-3 col-xs-3 thumbs">
              <div id="like-<%photo.id%>"><%= render 'likeable', photo: photo %></div>
            </div>
          </div>
        </div>                        
      </div>
    </div>
    <% end %>

  </div>
</div>




<script src="/path/to/masonry.pkgd.min.js"></script>

<script type="">

$('.grid').masonry({
  // options
  itemSelector: '.grid-item',
  columnWidth: 150
});
</script> 
