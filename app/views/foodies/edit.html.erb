<div class="container-fluid">
	<div class="row invisidiv"></div>
		<div class="row">
			<div class="col-md-3 col-xs-3"></div>
				<div class="col-md-6 col-xs-6">
					<p class="editprofile">Edit Your Profile</p>
					<%= form_for @foody, url: foody_path(@foody), method: :patch do |f| %>

					<form>
					  <div class="form-group">
							<%= f.label :name %>
							<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
					  </div>
					  <div class="form-group">
							<%= f.label :status %>
							<%= f.text_field :status, class: "form-control", placeholder: "Brief description" %>		
					  </div>
					  <div class="form-group">
							<%= f.label :Your_picture %>
							<%= f.file_field :avatar, type: "file" %>
					    <p class="help-block">Upload your profile picture!</p>
					  </div>
					  <div class="checkbox">
					    <label>
					      <input type="checkbox"> Check me out
					    </label>
					  </div>
					  <%= f.submit 'Save Changes', class: "btn btn-default" %>
					</form>

					<% end %>
				</div>
			<div class="col-md-3 col-xs-3"></div>
		</div>
	<div class="row invisidiv"></div>
</div>