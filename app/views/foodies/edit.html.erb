			  </div>

			  <div class="form-group name-box" style="width:80%;">
					<%= f.label :status %>
					<%= f.text_field :status, class: "form-control", placeholder: "Brief description" %></br>	
        </div>
			  
			  <div class="form-group" style="text-align: center;">
					</br><%= f.label :Your_picture %>
					<div class="my_centered_buttons">
   					<div class="fileinputs submit">
				  		<%= f.file_field :avatar, id: "avatar-upload", :class => "file" %>
				  		  <div class="fakefile" style="width:100%;">
				  		    <%= f.hidden_field :avatar_cache %>
				  		   	<button type="button" class="submit" style="width:100%;" >Add Your Image </button>
				  			</div>
				  	 </div>
				  </div>   
			    <p class="help-block">Upload your profile picture!</p></br>
			  </div>

	      <div class="form-group" style="text-align: center;">
			    <div class="">
				    <div class="fileinputs">
              <input class="" name="commit" value="Save Changes" data-disable-with="" type="submit"style="display:none;">
                <div class="fakefile" style="width:100%;"></input>
                  <button type="" class="" style="width:45%;"> Submit </button>
                </div>
            </div>
          </div>
        </div>	
			<% end %>
		</div>
	
		<div class="col-md-6 col-xs-6">						  		 
			<div class="preview-photo">
			  <img id="img-prev" class="img-new" src="#" alt="" class="img-thumbnail hidden"/>	
			</div>		
		</div>	
  </div>



 

<script type="text/javascript">

$(function() {
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (e) {
        $('#img-prev').attr('src', e.target.result);
      }
      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#avatar-upload").change(function(){
    $('#img-prev').removeClass('hidden');
    readURL(this);
  });
});

</script>