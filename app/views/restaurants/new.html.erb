<div class="container">
	
	<h1>Register your restaurant</h1>

	<%= form_for @new_restaurant, url: restaurants_path, method: :post do |f| %>

		<%= f.label :name %>
		<%= f.text_area :name %>

		<%= f.label :description %>
		<%= f.text_field :description %>

		<%= f.label :time %>
		<%= f.text_area :time %>

		<%= f.label :location %>
		<%= f.text_field :location %>

		<%= f.label :certification %>
		<%= f.text_area :certification %>

		<%= f.submit 'Register' %>

	<% end %>

</div>