<style>

  .grid-item { width: 360px; }
  .grid-item--width2 { width: 360px; }
  
</style>


<!-- ///////////////////////// main banner ///////////////////////////////////////// -->
<div class="container-fluid">
  <div class="row">

    <div class="landing-banner">
      <div class="row textspace"> 
        <div class="col-md-3 col-xs-3"></div>
          <div class="col-md-6 col-xs-6">
            <div class="homefont text-center">
              <br />
              <br />
                Your instant baby-sitter solution!
              <br />
              <p>Giving the ease of mind to all parents in need</p>
            </div>
          </div>
        <div class="col-md-3 col-xs-3"></div>
      </div>

      <div class="row searchrow">
        <div class="col-md-3 col-xs-3"></div>
        <div class="col-md-6 col-xs-6">

        <div class="row">
          <div class="col-md-2 col-xs-2"></div>
            <div class="col-md-8 col-xs-8">
              <%= form_tag(search_photos_path, method: :patch) do %>

              <form class="searchbar" role="search">
                <div class="input-group">
                  <%= text_field_tag :search_query,params[:search_query], placeholder: "Looking for ...", class: "form-control" %>
                  <span class="input-group-btn">
                    <%= button_tag(type: "submit", class: "btn btn-danger") do %>
                    <i class="fa fa-search fa-lg"></i>
                  <% end %>
                  </span>
                    <% end %>
                 </div>
              </form>

            </div>

          <div class="col-md-2 col-xs-2"></div>
        </div>
        <div class="col-md-3 col-xs-3"></div>
       </div>
      </div>

     </div>
  </div>
</div>
<!-- ///////////////////////// Latest reviews ///////////////////////////////////////// -->
<div class="container-fluid">
  <div class="row cardrow">

      <div class="posthead">Nannies Near You</div>
      <div class="container-fluid">
        <div class="row">
          <div id='card-photo'>  
            <%= render 'photo_card', photos: @latest_photos %>
          </div>
        </div>
</div>
  </div>
</div>

  <div class="row viewmore">
    <%= link_to 'View More', view_more_path, class: 'btn btn-primary btn-xs buttonwide' %>
  </div>

<!-- ///////////////////////// Categories ///////////////////////////////////////// -->

<!-- ///////////////////////// High Rated Reviews ///////////////////////////////////////// -->

<div class="container-fluid">
  <div class="row cardrow">

    <div class="posthead">High Rated Nannies</div>

    <div id='card-photo-bottom'>
      <%= render 'photo_card', photos: @photos_according_to_ratings %>
    </div>
                                         
  </div> <!-- end card -->
</div>

<div class="row viewmore">
    <%= link_to 'View More', top_reviews_path, class: 'btn btn-primary btn-xs buttonwide' %>
  </div>

<script type="">

$('.grid').masonry({
  // options
  itemSelector: '.grid-item',
  columnWidth: 5
});
</script>
