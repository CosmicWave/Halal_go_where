<div class="container-fluid">
	<div class="row">

		<div class="landing-banner">
			<div class="row textspace">	
				<div class="col-md-3 col-xs-3"></div>
				<div class="col-md-6 col-xs-6">
					<div class="homefont text-center">
						Find the best halal makan places in Singapore!
					</div>
				</div>
				<div class="col-md-3 col-xs-3"></div>
			</div>

			<div class="row searchrow">
				<div class="col-md-4 col-xs-4"></div>
				<div class="col-md-6 col-xs-6">
					<form class="searchbar" role="search">
						<div class="input-group">
							<%= form_tag search_path, method: :patch do %>
							<%= text_field_tag :search, params[:search] %>
							<%= submit_tag 'Search', class: 'btn btn-danger searchbutton' %><% end %>
						</div>
					</form>
				</div>
				<div class="col-md-2 col-xs-2"></div>
			</div>
		</div>

	</div>
</div>


<div class="container-fluid">
	<div class="row indexes">
	<!-- link_to "Sign in with Facebook", foody_facebook_omniauth_authorize_path -->

	<% if foody_signed_in? %>
		<%= link_to current_foody.name, foody_path(current_foody) %>
	<% end %>

	 <% @photos.each do |photo| %>
		
		<%= photo.title %>
		<%= photo.description %>
		<p>$<%= photo.price %></p>		
		<%= image_tag photo.avatar_url(:thumb).to_s, :size => '260x180' %>
	
		<% if current_review = photo.likeables.find_by(foody_id: current_foody.id) %>
			<%= render 'got_likeable', photo: photo %>
		<% else %>
			<%= render 'no_likeable', photo: photo %>
		<% end %>
		
	<% end %>

			 <!-- <td><div class="">< link_to "Edit", edit_foodies_photo_path(id: photo.id) %>    </div></td> -->
			 <!-- <td><div class="">< link_to "Delete", foodies_photo_path(id: photo.id), method: :delete %></div></td> -->

	  <%= link_to "Upload New Photo", new_foodies_photo_path %>

  </div>
</div>

