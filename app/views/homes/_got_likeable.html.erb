<% current_status = Likeable.find_by(photo_id: photo.id, foody: current_foody) %>
<% current_review = photo.likeables.find_by(foody_id: current_foody.id) %>

<% if current_review.review == 2 %>
	
	<%= link_to "<i class=\"glyphicon glyphicon-thumbs-up\"></i>".html_safe, foodies_photo_likeable_path(photo_id: photo.id, id: current_status.id), method: :delete %>	
	
	<%= link_to "<i class=\"glyphicon glyphicon-thumbs-down\"></i>".html_safe, convert_like_foodies_photo_likeable_path(photo_id: photo.id, id: current_review.id), method: :get %>

<% elsif current_review.review == 1 %>
	
	<%= link_to "<i class=\"glyphicon glyphicon-thumbs-up\"></i>".html_safe, convert_dislike_foodies_photo_likeable_path(photo_id: photo.id, id: current_review.id), method: :get %>
	
	<%= link_to "<i class=\"glyphicon glyphicon-thumbs-down\"></i>".html_safe, foodies_photo_likeable_path(photo_id: photo.id, id: current_status.id), method: :delete %>

<% end %>